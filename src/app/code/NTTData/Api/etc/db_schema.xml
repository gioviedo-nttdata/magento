        <column xsi:type="text" name="name" nullable="false"/>
        <column xsi:type="text" name="image" nullable="false"/>
        <column xsi:type="text" name="type" nullable="false"/>
        <column xsi:type="text" name="generation" nullable="false"/>
        <column xsi:type="text" name="region" nullable="false"/>
